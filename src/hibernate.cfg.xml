        <mapping class="com.zhengshouzi.myweb.entity.DescriptionEntity"/>
        <mapping class="com.zhengshouzi.myweb.entity.JudgetaskEntity"/>
        <mapping class="com.zhengshouzi.myweb.entity.MergetaskEntity"/>
